{
    "name": "Allergen Finder",
    "version": "1.0",
    "description": "Find any allergies on a product page",
    "permissions":["activeTab","declarativeContent","storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action":{
        "default_popup": "popup.html",
        "default_icon":{
            "16":"icon.png"
        }
    },
    "options_page":"options.html",
    "icons":{
        "16":"icon.png"
    },
    "manifest_version": 2
}